{{> header }}

<!-- Signup form -->
<div class="main-container">
    <div class="email-login-container">
       <h1> Register</h1>
       <!-- If error, displays an alert message -->
       {{#if hasErrors}}
           <div class="alert alert-danger">
               {{# each messages }}
                   <p>{{this}}</p>
               {{/each}}
           </div>
       {{/if}}
       <form action="/users/signup" method="post">
           <div class="form-group">
               <!-- <label for="email">E-Mail</label> -->
               <input type="text" placeholder="Email" id="email" name="email" class="input-box">
           </div>
           <div class="form-group">
               <!-- <label for="password">Password</label> -->
               <input type="password" placeholder="Password" id="password" name="password" class="input-box">
           </div>
           <!-- Passes csrfToken to the request-->
           <input type="hidden" name="_csrf" value="{{ csrfToken }}">
           <button type="submit" class="btn login-button">Sign Up</button>
<p>
</p>
<div style="color: white; text-align: center">Don't have an account? <a href="/users/signin">Sign in instead!</a></div>


       </form>

</div>
</div>
{{> footer }}


{{> header }}

<!-- Signin form -->
<div class="main-container">
    <div class="email-login-container">
        <h1>Sign In</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/users/signin" method="post">
            <div class="form-group">
                <!-- <label for="email">E-Mail</label> -->
                <input type="text" placeholder="Email" id="email" name="email" class="input-box">
            </div>
            <div class="form-group">
                <!-- <label for="password">Password</label> -->
                <input type="password" placeholder="Password" id="password" name="password" class="input-box">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn login-button">Sign In</button>
        </form>
        <p>
        </p>
        <div style="color: white; text-align: center">Don't have an account? <a href="/users/signup">Register instead!</a></div>
</div>
</div>
{{> footer }}
